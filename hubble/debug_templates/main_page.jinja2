    </header>
    <div class="container-main">
        <div class="search-box">
            <div class="box-header">
                <span class="box-label">Глобальный поиск</span>
                <span class="request-label">/search</span>
            </div>
            <div class="input-group">
                <input type="text" id="searchQuery" placeholder="Введите название медиа или фамилию человека">
                <button class="icon-btn" onclick="testSearch()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="search()">Поиск</button>
        </div>
        <div class="info-box">
            <div class="box-header">
                <span class="box-label">Информация о контенте</span>
                <span class="request-label">/info</span>
            </div>
            <div class="input-group">
                <select id="infoContentType">
                    <option value="film">Фильм</option>
                    <option value="tvseries">Сериал</option>
                </select>
                <input type="text" id="infoContentId" placeholder="Введите ID">
                <button class="icon-btn" onclick="testInfo()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="getInfo()">Поиск</button>
        </div>
        <div class="similars-box">
            <div class="box-header">
                <span class="box-label">Поиск похожего контента</span>
                <span class="request-label">/similars</span>
            </div>
            <div class="input-group">
                <select id="similarsContentType">
                    <option value="film">Фильм</option>
                    <option value="tvseries">Сериал</option>
                </select>
                <input type="text" id="similarsContentId" placeholder="Введите ID">
                <button class="icon-btn" onclick="testSimilars()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="getSimilars()">Поиск</button>
        </div>
        <div class="person-box">
            <div class="box-header">
                <span class="box-label">Поиск людей</span>
                <span class="request-label">/person</span>
            </div>
            <div class="input-group">
                <input type="text" id="personId" placeholder="Введите ID">
                <button class="icon-btn" onclick="testPerson()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="getPerson()">Поиск</button>
        </div>
        <div class="trivias-box">
            <div class="box-header">
                <span class="box-label">Поиск фактов</span>
                <span class="request-label">/trivias</span>
            </div>
            <div class="input-group">
                <select id="triviasContentType">
                    <option value="film">Фильм</option>
                    <option value="tvseries">Сериал</option>
                </select>
                <input type="text" id="triviasContentId" placeholder="Введите ID">
                <button class="icon-btn" onclick="testTrivias()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="getTrivias()">Поиск</button>
        </div>
        <div class="media-posts-box">
            <div class="box-header">
                <span class="box-label">Поиск медиа-постов</span>
                <span class="request-label">/media_posts</span>
            </div>
            <div class="input-group">
                <select id="mediaPostsContentType">
                    <option value="film">Фильм</option>
                    <option value="tvseries">Сериал</option>
                </select>
                <input type="text" id="mediaPostsContentId" placeholder="Введите ID">
                <button class="icon-btn" onclick="testMediaPosts()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="getMediaPosts()">Поиск</button>
        </div>
        <div class="series-dates-box">
            <div class="box-header">
                <span class="box-label">Даты выхода новых серий</span>
                <span class="request-label">/series_dates</span>
            </div>
            <div class="input-group">
                <input type="text" id="seriesTitle" placeholder="Введите название сериала">
                <button class="icon-btn" onclick="testSeriesDates()" title="Автотест">
                    <img src="https://img.icons8.com/external-others-lafs/64/external-auto-iiot-outline-colored-iconset-others-lafs-3.png" alt="Автотест">
                </button>
            </div>
            <button class="search-btn" onclick="getSeriesDates()">Поиск</button>
        </div>
    </div>
    <script>
        function search() {
            const query = document.getElementById('searchQuery').value;
            if (query) {
                window.location.href = `http://127.0.0.1:8080/search?search_query=${encodeURIComponent(query)}`;
            }
        }
        function testSearch() {
            window.location.href = 'http://127.0.0.1:8080/search?search_query=привет, мир!';
        }
        function getInfo() {
            const contentType = document.getElementById('infoContentType').value;
            const id = document.getElementById('infoContentId').value;
            if (contentType && id) {
                window.location.href = `http://127.0.0.1:8080/info?content_type=${contentType}&id=${encodeURIComponent(id)}`;
            }
        }
        function testInfo() {
            const types = ['film', 'tvseries'];
            const contentType = types[Math.floor(Math.random() * types.length)];
            const id = Math.floor(Math.random() * 10001);
            window.location.href = `http://127.0.0.1:8080/info?content_type=${contentType}&id=${id}`;
        }
        function getSimilars() {
            const contentType = document.getElementById('similarsContentType').value;
            const id = document.getElementById('similarsContentId').value;
            if (contentType && id) {
                window.location.href = `http://127.0.0.1:8080/similars?content_type=${contentType}&id=${encodeURIComponent(id)}`;
            }
        }
        function testSimilars() {
            const types = ['film', 'tvseries'];
            const contentType = types[Math.floor(Math.random() * types.length)];
            const id = Math.floor(Math.random() * 10001);
            window.location.href = `http://127.0.0.1:8080/similars?content_type=${contentType}&id=${id}`;
        }
        function getPerson() {
            const id = document.getElementById('personId').value;
            if (id) {
                window.location.href = `http://127.0.0.1:8080/person?id=${encodeURIComponent(id)}`;
            }
        }
        function testPerson() {
            const id = Math.floor(Math.random() * 10001);
            window.location.href = `http://127.0.0.1:8080/person?id=${id}`;
        }
        function getTrivias() {
            const contentType = document.getElementById('triviasContentType').value;
            const id = document.getElementById('triviasContentId').value;
            if (contentType && id) {
                window.location.href = `http://127.0.0.1:8080/trivias?content_type=${contentType}&id=${encodeURIComponent(id)}`;
            }
        }
        function testTrivias() {
            const types = ['film', 'tvseries'];
            const contentType = types[Math.floor(Math.random() * types.length)];
            const id = Math.floor(Math.random() * 10001);
            window.location.href = `http://127.0.0.1:8080/trivias?content_type=${contentType}&id=${id}`;
        }
        function getMediaPosts() {
            const contentType = document.getElementById('mediaPostsContentType').value;
            const id = document.getElementById('mediaPostsContentId').value;
            if (contentType && id) {
                window.location.href = `http://127.0.0.1:8080/media_posts?content_type=${contentType}&id=${encodeURIComponent(id)}`;
            }
        }
        function testMediaPosts() {
            const types = ['film', 'tvseries'];
            const contentType = types[Math.floor(Math.random() * types.length)];
            const id = Math.floor(Math.random() * 10001);
            window.location.href = `http://127.0.0.1:8080/media_posts?content_type=${contentType}&id=${id}`;
        }
        function getSeriesDates() {
            const title = document.getElementById('seriesTitle').value;
            if (title) {
                window.location.href = `http://127.0.0.1:8080/series_dates?title=${encodeURIComponent(title)}`;
            }
        }
        function testSeriesDates() {
            const titles = ['Stranger Things', 'The Witcher', 'Breaking Bad', 'Game of Thrones'];
            const title = titles[Math.floor(Math.random() * titles.length)];
            window.location.href = `http://127.0.0.1:8080/series_dates?title=${encodeURIComponent(title)}`;
        }
        document.getElementById('searchQuery').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                search();
            }
        });
        document.getElementById('infoContentId').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                getInfo();
            }
        });
        document.getElementById('similarsContentId').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                getSimilars();
            }
        });
        document.getElementById('personId').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                getPerson();
            }
        });
        document.getElementById('triviasContentId').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                getTrivias();
            }
        });
        document.getElementById('mediaPostsContentId').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                getMediaPosts();
            }
        });
        document.getElementById('seriesTitle').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                getSeriesDates();
            }
        });
    </script>
</body>
